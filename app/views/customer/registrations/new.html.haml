.header-info
  %center
    %h1 GET STARTED

.gray-main-container
  %center
  .row-fluid
    #edit_user_section.span6
      = form_for @user, :url => customer_registrations_path(@user)  do |f|
        %fieldset.basic-info
          = f.fields_for :profile do |profile_form|
            %center
              = profile_form.text_field :username, placeholder: 'Username'

              = f.text_field :email, placeholder: 'Email'
              %br
              = f.password_field :password, placeholder: 'Password'
              %br
              = f.password_field :password_confirmation, placeholder: 'Password confirmation'
              %br

              = f.label :artist, :class => 'checkbox-user span4' do
                %span Artist
                = f.check_box :artist
              %label.checkbox-user.span4
                %span Collector
                %input{type: 'checkbox'}
              = f.label 'Galleries', :class => 'checkbox-user span4' do
                %span Galleries
                = f.check_box :artist
        %div
          = submit_tag 'Sign Up', class: 'pull-right'
          %label
            %a#terms I agree with the Terms of Use and Privacy Policy
            = check_box_tag :accept

            = render partial: 'shared/terms_modal'

        - content_for :javascript do
          $('#user_profile_attributes_birth_date').datepicker();
          /$('#terms').click(function(){$('#terms_service').toggle();});

