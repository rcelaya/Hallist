.row-fluid.span12#carousel-index
  .span12
    #myCarousel.carousel.slide
      .carousel-inner
        - Product.last(10).each_with_index do |product, index|
          .item.row{class: "#{'active' if index==0}"}
            = link_to product_path(product) do
              .span12
                = image_tag 'banner.png'
              .span4
                %h2= product.name
                %p= product.description.html_safe

      %a.carousel-control.left{"data-slide" => "prev", :href => "#myCarousel", :id => "carousel-control-left"} ‹
      %a.carousel-control.right{"data-slide" => "next", :href => "#myCarousel", :id => "carousel-control-right"} ›
      %a
        = image_tag 'rectangulo_header.png', :id => 'publicidad-header'
        %div#nombre-publicidad
          %span
            NEW!
            #contenido-publicidad
              Know Hope Original Work
          %br
          %span
            20% OFF
            #contenido-publicidad
              on all Stephen Power Prints!
          %br
          %span
            BUY 2
            #contenido-publicidad
              ROA Prints and get the 3rd
              %br
                Print FREE

- content_for :javascript do
  $('.carousel').carousel();

  $container = $('#recent-products-container');
  $(window).load(function(){
  $container.masonry();
  });